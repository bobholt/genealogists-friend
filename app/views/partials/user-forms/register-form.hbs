  <form action="/register" method="POST" class="well col-md-4 center-block">
    <div class="input-group gen-input-group">
      <label class="input-group-addon" for="email">Email</label>
      <input type="text" class="form-control" name="email" id="email">
    </div>
    <div class="input-group gen-input-group">
      <label class="input-group-addon" for="password">Password</label>
      <input type="password" class="form-control" name="password" id="password">
    </div>
    <div class="input-group gen-input-group">
      <label class="input-group-addon" for="confirm-password">Confirm Password</label>
      <input type="password" class="form-control" name="confirm-password" id="confirm-password">
    </div>
    <input type="submit" class="btn btn-default pull-right">
  </form>
